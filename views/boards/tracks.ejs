<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <table class="table table-light tracks text-center">
                <thead>
                    <th><h4>Songs by <%= artist[0] %></h4></th>
                </thead>
                <tbody>
                    <% tracks.forEach( t => { 
                        
                    %>
                        <tr>
                            <td style="background-image: url('<%= t.album.images[0].url %>'); background-size: 20%; background-repeat: no-repeat;">
                                <button class="btn btn-success"><%= t.name %></button>
                                <button class="btn btn-primary"><%= t.popularity %></button>
                                <a href="<%= t.preview_url %>" class="btn btn-secondary">Preview</a>
                                <a href="<%= t.external_urls.spotify %>" class="btn btn-info"><i class="material-icons">play_arrow</i></a>
                                <a href="/<%= t.id %>/analyze" target="_blank" rel="noopener noreferrer" class="btn btn-dark">Analyze</a>
                                
                            </td>
                        </tr>
                    <% })%>
                </tbody>
            </table>
        </div>
        <div class="col-6">
            <div class="row">
                <% board.forEach( b => { %>
                    <a href=""></a>
                    <div class="col-6">
                        <div class="card">
                        <img width="100%" height="200%" src="<%= b.image %>" alt="" class="card-image overlay">
                        <div class="card-img-overlay image">
                            <h3 class="card-title text-center"><%- b.title %></h3>
                            <p class="card-text"><img width="100%" height="200%" src="<%= b.image %>" alt="" class="card-image"><%- b.content %></p>
                            <p class="card-text" style="vertical-align: middle;">
                                <% b.tags.forEach( t => { %>
                                <small class="text-muted"><i class="material-icons" style="margin-right:5px;">bookmark</i><%= t.tags %></small>
                            <% }) %>
                            </p>
                        </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
